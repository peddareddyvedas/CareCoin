<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="180dp"
    android:padding="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#26343c">

            <com.example.rise.carecoin.FONTS.TextViewFontStyle
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Invite"
                android:textAlignment="center"
                android:textColor="@color/colorwhite"
                android:textSize="20dp"
                android:textStyle="normal" />

            <com.example.rise.carecoin.FONTS.TextViewFontStyle
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Do you want send Invitation to:"
                android:textAlignment="center"
                android:id="@+id/message"
                android:textColor="@color/colorwhite"
                android:textSize="16dp"
                android:textStyle="normal" />

            <com.example.rise.carecoin.FONTS.TextViewFontStyle
                android:id="@+id/textview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="82dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/colorwhite"
                android:textSize="16sp"
                android:textStyle="normal" />
            <com.example.rise.carecoin.FONTS.TextViewFontStyle
                android:id="@+id/textview3"
                android:layout_below="@+id/textview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:text="by using this email ?"
                android:textAlignment="center"
                android:textColor="@color/colorwhite"
                android:textSize="15sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/rl_main">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:weightSum="2">

                <com.example.rise.carecoin.FONTS.ButtonFontStyle
                    android:id="@+id/btn_no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:background="#74cdc1"
                    android:text="No"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorwhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.example.rise.carecoin.FONTS.ButtonFontStyle
                    android:id="@+id/btn_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorlightgreen"
                    android:text="Yes"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorwhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.example.rise.carecoin.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_below="@id/linear" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>


